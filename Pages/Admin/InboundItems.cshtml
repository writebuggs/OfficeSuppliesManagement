@page
@model OfficeSuppliesManagement.Pages.Admin.InboundItemsModel
@{
    ViewData["Title"] = "Inbound Items";
}

<h2>Inbound Items</h2>

<form method="post">
    <div>
        <label for="ItemCode">Item Code</label>
        <input type="text" id="ItemCode" name="ItemCode" required />
    </div>
    <div>
        <label for="PurchaseDate">Purchase Date</label>
        <input type="date" id="PurchaseDate" name="PurchaseDate" required />
    </div>
    <div>
        <label for="PurchaseQuantity">Purchase Quantity</label>
        <input type="number" id="PurchaseQuantity" name="PurchaseQuantity" required />
    </div>
    <div>
        <label for="UnitPrice">Unit Price</label>
        <input type="number" step="0.01" id="UnitPrice" name="UnitPrice" required />
    </div>
    <button type="submit">Add Inbound Record</button>
</form>

<h3>Existing Inbound Records</h3>
<table>
    <thead>
        <tr>
            <th>Inbound ID</th>
            <th>Item Code</th>
            <th>Purchase Date</th>
            <th>Purchase Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inbound in Model.Inbounds)
        {
            <tr>
                <td>@inbound.InboundId</td>
                <td>@inbound.ItemCode</td>
                <td>@inbound.PurchaseDate.ToString("yyyy-MM-dd")</td>
                <td>@inbound.PurchaseQuantity</td>
                <td>@inbound.UnitPrice</td>
                <td>@inbound.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>
