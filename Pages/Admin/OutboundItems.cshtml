@page
@model OfficeSuppliesManagement.Pages.Admin.OutboundItemsModel
@{
    ViewData["Title"] = "Outbound Items";
}

<h2>Outbound Items</h2>

<form method="post">
    <div>
        <label for="ItemCode">Item Code</label>
        <input type="text" id="ItemCode" name="ItemCode" required />
    </div>
    <div>
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" required />
    </div>
    <div>
        <label for="UserId">User ID</label>
        <input type="text" id="UserId" name="UserId" required />
    </div>
    <div>
        <label for="OutboundDate">Outbound Date</label>
        <input type="date" id="OutboundDate" name="OutboundDate" required />
    </div>
    <div>
        <label for="Status">Status</label>
        <select id="Status" name="Status" required>
            <option value="Requested">Requested</option>
            <option value="Confirmed">Confirmed</option>
        </select>
    </div>
    <button type="submit">Add Outbound Record</button>
</form>

<h3>Existing Outbound Records</h3>
<table>
    <thead>
        <tr>
            <th>Outbound ID</th>
            <th>Item Code</th>
            <th>Quantity</th>
            <th>User ID</th>
            <th>Outbound Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var outbound in Model.Outbounds)
        {
            <tr>
                <td>@outbound.OutboundId</td>
                <td>@outbound.ItemCode</td>
                <td>@outbound.Quantity</td>
                <td>@outbound.UserId</td>
                <td>@outbound.OutboundDate.ToString("yyyy-MM-dd")</td>
                <td>@outbound.Status</td>
            </tr>
        }
    </tbody>
</table>
